{
   "compilerOptions": {
     "lib": ["es2019"],
     "baseUrl": ".",
     "target": "es2019",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./dist",
     "rootDirs": ["./src"],
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "skipLibCheck": true,
     "typeRoots": [
      "./@types"
    ],
   },
   "include": ["./src/**/*.ts", "./test/**/*.ts"],
   "exclude": ["./node_modules/*", "dist", "client"],
 }